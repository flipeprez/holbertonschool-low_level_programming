# -*- Makefile -*-

NAME = school
CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
CFLAG = -Wall -Werror -Wextra -pedantic

.PHONY: all school clean oclean fclean re

all: $(NAME)

school: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ .*.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
